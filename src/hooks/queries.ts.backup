export function useLogout() {
  const { logout } = useAuth();
  const navigate = useNavigate();

  return useMutation({
    mutationFn: logout,
    onSuccess: async () => {
      await queryClient.clear();
      navigate('/login');
    },
    onError: (error: unknown) => {
      console.error('로그아웃 실패:', error);
    },
  };
}

